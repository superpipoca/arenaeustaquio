:root {
  --bg-main: #050505;
  --bg-card: #121212;
  --border-subtle: #333;
  --text-main: #f5f5f5;
  --text-muted: #999;
  --accent-primary: #ff0055; /* Vermelho El√©trico */
  --accent-link: #00ffff; /* Ciano Hacker */
  --accent-hype: #ffdd00; /* Amarelo Ousado */
}

* {
  box-sizing: border-box;
}

html,
body {
  margin: 0;
  padding: 0;
  height: 100%;
}

body {
  font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  background: radial-gradient(circle at top left, #181818, #050505 60%);
  color: var(--text-main);
  font-size: 16px; /* ‚Üë antes era 14px */
}

/* Container base */
.container {
  max-width: 1100px;
  margin: 0 auto;
  padding: 0 20px;
}

/* HEADER */
header {
  border-bottom: 1px solid var(--border-subtle);
  background: rgba(5, 5, 5, 0.96);
  backdrop-filter: blur(10px);
}

.header-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 64px;
}

.logo-box {
  padding: 6px 12px;
  border-radius: 999px;
  border: 1px solid var(--border-subtle);
  display: inline-flex;
  align-items: center;
  gap: 8px;
  font-family: "Oswald", sans-serif;
  font-size: 14px; /* ‚Üë */
  text-transform: uppercase;
  letter-spacing: 0.14em;
}

.logo-pill {
  padding: 2px 8px;
  border-radius: 999px;
  border: 1px solid var(--border-subtle);
  font-size: 11px; /* ‚Üë */
  text-transform: uppercase;
  letter-spacing: 0.12em;
  color: var(--text-muted);
}

.header-note {
  font-size: 12px; /* ‚Üë antes 11px */
  color: var(--text-muted);
  max-width: 280px;
  text-align: right;
}

/* MAIN */
main {
  padding: 32px 0 48px;
}

/* HERO PITCH */
.hero {
  display: grid;
  grid-template-columns: minmax(0, 1.5fr) minmax(0, 1.1fr);
  gap: 32px;
  align-items: center;
  padding-bottom: 40px;
  border-bottom: 1px dashed var(--border-subtle);
}

.hero-kicker {
  font-size: 12px; /* ‚Üë */
  text-transform: uppercase;
  letter-spacing: 0.18em;
  color: var(--accent-link);
  margin-bottom: 10px;
}

.hero-title {
  font-family: "Oswald", sans-serif;
  font-size: 40px; /* ‚Üë antes 32px */
  line-height: 1.08;
  text-transform: uppercase;
  margin: 0 0 14px;
}

.hero-title span {
  color: var(--accent-hype);
}

.hero-subtitle {
  font-size: 16px; /* ‚Üë antes 14px */
  color: var(--text-muted);
  margin-bottom: 18px;
  max-width: 560px;
  line-height: 1.55;
}

.hero-bullets {
  list-style: none;
  padding: 0;
  margin: 0 0 22px;
  font-size: 15px; /* ‚Üë antes 13px */
  color: var(--text-muted);
  line-height: 1.5;
}

.hero-bullets li + li {
  margin-top: 6px;
}

.hero-bullets li::before {
  content: "‚ñπ";
  margin-right: 6px;
  color: var(--accent-link);
}

.hero-ctas-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
}

.btn-primary,
.btn-outline {
  padding: 11px 22px; /* ‚Üë um pouco */
  border-radius: 999px;
  border: 1px solid var(--border-subtle);
  background: transparent;
  color: var(--text-main);
  cursor: pointer;
  font-size: 13px; /* ‚Üë antes 12px */
  text-transform: uppercase;
  letter-spacing: 0.12em;
}

.btn-primary {
  background: var(--accent-primary);
  border-color: var(--accent-primary);
}

.btn-primary:hover {
  filter: brightness(1.06);
}

.btn-outline:hover {
  border-color: var(--accent-link);
  color: var(--accent-link);
}

/* HERO CARD RIGHT */
.hero-right-card {
  border-radius: 16px;
  border: 1px solid var(--border-subtle);
  background: #101010;
  padding: 16px;
  font-size: 15px; /* ‚Üë antes 14px */
}

.hero-right-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.hero-right-title {
  font-family: "Oswald", sans-serif;
  font-size: 20px; /* ‚Üë antes 18px */
  text-transform: uppercase;
}

.hero-right-badge {
  padding: 3px 9px;
  border-radius: 999px;
  border: 1px solid var(--border-subtle);
  font-size: 11px; /* ‚Üë antes 10px */
  text-transform: uppercase;
  letter-spacing: 0.08em;
  color: var(--text-muted);
}

.hero-right-body p {
  margin: 0 0 6px;
  color: var(--text-muted);
  line-height: 1.5;
}

.mini-metric-row {
  display: flex;
  justify-content: space-between;
  gap: 10px;
  margin-top: 10px;
}

.mini-metric {
  flex: 1;
  border-radius: 10px;
  border: 1px dashed var(--border-subtle);
  padding: 8px 10px;
}

.mini-metric-label {
  font-size: 13px; /* ‚Üë antes 12px */
  color: var(--text-muted);
  margin-bottom: 3px;
}

.mini-metric-value {
  font-size: 16px; /* ‚Üë antes 15px */
}

.mini-metric-value.pos {
  color: var(--accent-hype);
}

.mini-metric-value.neg {
  color: var(--accent-primary);
}

.hero-right-note {
  font-size: 12px; /* ‚Üë antes 11px */
  color: var(--text-muted);
  margin-top: 10px;
}

/* SE√á√ïES GEN√âRICAS */
section {
  padding: 36px 0;
  border-bottom: 1px dashed var(--border-subtle);
}

.section-header {
  margin-bottom: 20px;
}

.section-label {
  font-size: 12px; /* ‚Üë antes 11px */
  text-transform: uppercase;
  letter-spacing: 0.18em;
  color: var(--accent-link);
  margin-bottom: 8px;
}

.section-title {
  font-family: "Oswald", sans-serif;
  font-size: 26px; /* ‚Üë antes 20px */
  text-transform: uppercase;
  margin-bottom: 6px;
}

.section-subtitle {
  font-size: 15px; /* ‚Üë antes 13px */
  color: var(--text-muted);
  max-width: 680px;
  line-height: 1.6;
}

.grid-3 {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 20px;
}

.card {
  border-radius: 14px;
  border: 1px dashed var(--border-subtle);
  background: #101010;
  padding: 16px;
  font-size: 15px; /* ‚Üë antes 13px */
}

.card h3 {
  font-size: 15px; /* ‚Üë antes 13px */
  text-transform: uppercase;
  letter-spacing: 0.12em;
  margin: 0 0 10px;
}

.card p {
  margin: 0 0 8px;
  color: var(--text-muted);
  line-height: 1.5;
}

.list-check {
  list-style: none;
  padding: 0;
  margin: 8px 0 0;
}

.list-check li {
  margin-bottom: 6px;
  color: var(--text-muted);
  font-size: 14px;
}

.list-check li::before {
  content: "‚úî";
  margin-right: 6px;
  color: var(--accent-hype);
}

.two-cols {
  display: grid;
  grid-template-columns: minmax(0, 1.2fr) minmax(0, 1fr);
  gap: 22px;
}

.speech-block {
  border-radius: 14px;
  border: 1px dashed var(--border-subtle);
  background: #101010;
  padding: 16px;
  font-size: 15px; /* ‚Üë antes 13px */
  color: var(--text-muted);
  line-height: 1.6;
}

.speech-label {
  font-size: 12px; /* ‚Üë antes 11px */
  text-transform: uppercase;
  letter-spacing: 0.16em;
  color: var(--accent-link);
  margin-bottom: 8px;
}

.speech-line {
  margin-bottom: 8px;
}

.speech-speaker {
  font-weight: 600;
  color: var(--accent-hype);
}

.warning-strip {
  margin-top: 20px;
  padding: 12px 14px;
  border-radius: 12px;
  border: 1px solid var(--accent-primary);
  background: rgba(255, 0, 85, 0.06);
  font-size: 13px; /* ‚Üë antes 11px */
  color: var(--text-muted);
  line-height: 1.6;
}

.warning-strip strong {
  color: var(--accent-primary);
}

.cta-center {
  text-align: center;
  margin-top: 24px;
}

.cta-note {
  font-size: 12px; /* ‚Üë antes 11px */
  color: var(--text-muted);
  margin-top: 8px;
}

/* FOOTER TAG SIMPLES (se ainda for usado em algum lugar) */
footer {
  padding: 24px 0 32px;
  font-size: 12px; /* ‚Üë antes 11px */
  color: var(--text-muted);
}

.footer-inner {
  border-top: 1px solid var(--border-subtle);
  padding-top: 14px;
  display: flex;
  justify-content: space-between;
  gap: 20px;
}

.footer-right {
  max-width: 420px;
  line-height: 1.5;
}

/* --- FOOTER REFOR√áADO 3USTAQUIO (componente) --- */

.footer {
  padding: 32px 0 40px;
  font-size: 12px; /* ‚Üë */
  color: var(--text-muted);
  border-top: 1px solid var(--border-subtle);
  background: radial-gradient(circle at top, #111111 0, #050505 55%);
}

.footer-inner-outer {
  display: flex;
  flex-direction: column;
  gap: 18px;
}

.footer-main {
  display: flex;
  justify-content: space-between;
  gap: 32px;
  align-items: flex-start;
}

.footer-brand {
  max-width: 380px;
}

.footer-logo {
  font-family: "Oswald", sans-serif;
  font-size: 20px; /* ‚Üë antes 18px */
  letter-spacing: 0.18em;
  text-transform: uppercase;
  margin-bottom: 6px;
}

.footer-tagline {
  font-size: 14px; /* ‚Üë antes 12px */
  margin: 0 0 6px;
  color: var(--text-main);
}

.footer-legal {
  font-size: 12px; /* ‚Üë antes 11px */
  margin: 0;
  color: var(--text-muted);
  line-height: 1.6;
}

.footer-nav {
  display: flex;
  gap: 32px;
  flex-wrap: wrap;
  min-width: 0;
}

.footer-column {
  min-width: 160px;
}

.footer-heading {
  font-size: 12px; /* ‚Üë */
  text-transform: uppercase;
  letter-spacing: 0.16em;
  margin: 0 0 8px;
  color: var(--accent-link);
}

.footer-nav-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer-nav-item + .footer-nav-item {
  margin-top: 6px;
}

.footer-nav-link {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  font-size: 12px; /* ‚Üë */
  color: var(--text-muted);
  text-decoration: none;
  border: none;
  background: transparent;
  padding: 0;
  cursor: pointer;
  transition: color 0.15s ease, transform 0.15s ease;
}

.footer-nav-link::before {
  content: "‚ñπ";
  font-size: 11px;
  color: var(--accent-link);
}

.footer-nav-link:hover {
  color: var(--accent-link);
  transform: translateX(2px);
}

.footer-nav-link-button {
  text-align: left;
}

.footer-disclaimer {
  padding: 12px 14px;
  border-radius: 10px;
  border: 1px solid rgba(255, 0, 85, 0.7);
  background: rgba(255, 0, 85, 0.06);
  font-size: 12px; /* ‚Üë antes 11px */
  line-height: 1.6;
}

.footer-disclaimer strong {
  color: var(--accent-primary);
  font-weight: 600;
}

.footer-bottom-row {
  display: flex;
  justify-content: space-between;
  gap: 12px;
  margin-top: 6px;
  border-top: 1px dashed var(--border-subtle);
  padding-top: 8px;
}

.footer-meta {
  font-size: 11px; /* ‚Üë antes 10px */
  color: var(--text-muted);
}

/* RESPONSIVO */
@media (max-width: 900px) {
  .hero {
    grid-template-columns: minmax(0, 1fr);
  }

  .hero-right-card {
    order: -1;
    margin-bottom: 8px;
  }

  .grid-3,
  .two-cols {
    grid-template-columns: minmax(0, 1fr);
  }

  .footer-inner {
    flex-direction: column;
  }

  .header-note {
    display: none;
  }

  body {
    font-size: 17px; /* ‚Üë antes 15px no mobile */
  }

  .hero-title {
    font-size: 40px;
  }

  .hero-subtitle,
  .hero-bullets {
    font-size: 17px;
    line-height: 1.6;
  }

  .section-title {
    font-size: 24px;
  }

  .card,
  .speech-block {
    font-size: 16px;
  }

  .card h3 {
    font-size: 15px;
  }

  .hero-right-note,
  .cta-note,
  .warning-strip {
    font-size: 13px;
  }

  /* Responsivo footer refor√ßado */
  .footer-main {
    flex-direction: column;
    gap: 24px;
  }

  .footer {
    padding: 28px 0 32px;
  } 

  .footer-bottom-row {
    flex-direction: column;
    align-items: flex-start;
  }
}

/* HEADER aprimorado */

.site-header {
  border-bottom: 1px solid var(--border-subtle);
  background: rgba(5, 5, 5, 0.96);
  backdrop-filter: blur(10px);

  /* ESSENCIAL PARA FICAR VIS√çVEL NA ROLAGEM */
  position: sticky;
  top: 0;
  z-index: 50;
}

.header-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 72px; /* um pouco mais alto */
  gap: 24px;
}

.header-left {
  display: flex;
  align-items: center;
}

/* Logo j√° existia, s√≥ mant√©m */
.logo-box {
  padding: 6px 12px;
  border-radius: 999px;
  border: 1px solid var(--border-subtle);
  display: inline-flex;
  align-items: center;
  gap: 8px;
  font-family: "Oswald", sans-serif;
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: 0.14em;
}

.logo-pill {
  padding: 2px 8px;
  border-radius: 999px;
  border: 1px solid var(--border-subtle);
  font-size: 11px;
  text-transform: uppercase;
  letter-spacing: 0.12em;
  color: var(--text-muted);
}

/* Navega√ß√£o */

.header-nav {
  flex: 1;
  display: flex;
  justify-content: center;
}

.header-nav-list {
  display: flex;
  align-items: center;
  gap: 20px;
  list-style: none;
  padding: 0;
  margin: 0;
}

.header-nav-item {
}

.header-nav-link {
  font-size: 13px;
  color: var(--text-muted);
  text-decoration: none;
  text-transform: uppercase;
  letter-spacing: 0.14em;
  padding-bottom: 2px;
  border-bottom: 1px solid transparent;
  transition: color 0.15s ease, border-color 0.15s ease, transform 0.15s ease;
}

.header-nav-link:hover {
  color: var(--accent-link);
  border-color: var(--accent-link);
  transform: translateY(-1px);
}

/* Nota + CTA */

.header-right {
  display: flex;
  align-items: center;
  gap: 16px;
}

.header-note {
  font-size: 12px;
  color: var(--text-muted);
  max-width: 260px;
  text-align: right;
  line-height: 1.4;
}

.header-cta {
  padding: 9px 18px;
  border-radius: 999px;
  border: 1px solid var(--accent-primary);
  background: var(--accent-primary);
  color: var(--text-main);
  cursor: pointer;
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.14em;
  white-space: nowrap;
  transition: filter 0.15s ease, transform 0.15s ease, box-shadow 0.15s ease;
}

.header-cta:hover {
  filter: brightness(1.08);
  transform: translateY(-1px);
  box-shadow: 0 0 0 1px rgba(255, 0, 85, 0.6), 0 10px 24px rgba(0, 0, 0, 0.6);
}

/* Responsivo header */

@media (max-width: 900px) {
  .header-inner {
    height: auto;
    padding-top: 8px;
    padding-bottom: 8px;
    flex-wrap: wrap;
    align-items: flex-start;
  }

  .header-nav {
    order: 3;
    width: 100%;
    justify-content: flex-start;
    overflow-x: auto;
  }

  .header-nav-list {
    gap: 14px;
    padding-bottom: 4px;
  }

  .header-nav-link {
    font-size: 11px;
    letter-spacing: 0.12em;
  }

  .header-right {
    margin-left: auto;
  }

  .header-note {
    display: none; /* simplifica no mobile */
  }

  .header-cta {
    font-size: 11px;
    padding: 8px 14px;
  }
}

/* === JORNADA DO CRIADOR ‚Äì CREATE TOKEN WIZARD === */

.screen-create-token {
  padding: 40px 0 60px;
}

.wizard-header {
  padding-bottom: 24px;
  border-bottom: 1px dashed var(--border-subtle);
  margin-bottom: 24px;
}

.wizard-kicker {
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.18em;
  color: var(--accent-link);
  margin-bottom: 8px;
}

.wizard-title {
  font-family: "Oswald", sans-serif;
  font-size: 32px;
  text-transform: uppercase;
  margin: 0 0 8px;
}

.wizard-title span {
  color: var(--accent-hype);
}

.wizard-subtitle {
  font-size: 15px;
  color: var(--text-muted);
  max-width: 680px;
  line-height: 1.6;
  margin: 0 0 18px;
}

.wizard-steps {
  display: flex;
  flex-wrap: wrap;
  gap: 14px;
}

.wizard-step {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 12px;
  color: var(--text-muted);
}

.wizard-step-circle {
  width: 22px;
  height: 22px;
  border-radius: 999px;
  border: 1px solid var(--border-subtle);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 11px;
}

.wizard-step-label {
  text-transform: uppercase;
  letter-spacing: 0.12em;
}

.wizard-step--active .wizard-step-circle {
  border-color: var(--accent-link);
  color: var(--accent-link);
}

.wizard-step--active .wizard-step-label {
  color: var(--text-main);
}

.wizard-step--done .wizard-step-circle {
  border-color: var(--accent-hype);
  background: rgba(255, 221, 0, 0.12);
  color: var(--accent-hype);
}

/* Card principal de cada etapa */

.wizard-main {
  margin-top: 24px;
}

.wizard-card {
  border-radius: 16px;
  border: 1px solid var(--border-subtle);
  background: var(--bg-card);
  padding: 18px 18px 20px;
}

.wizard-card-header {
  margin-bottom: 18px;
}

.wizard-grid-2 {
  display: grid;
  grid-template-columns: minmax(0, 1.2fr) minmax(0, 1fr);
  gap: 20px;
}

/* Campos */

.field-group {
  margin-bottom: 16px;
}

.field-label {
  display: block;
  font-size: 13px;
  margin-bottom: 4px;
  color: var(--text-main);
}

.field-input,
.field-textarea,
select.field-input {
  width: 100%;
  border-radius: 8px;
  border: 1px solid var(--border-subtle);
  background: #050505;
  color: var(--text-main);
  padding: 8px 10px;
  font-size: 14px;
  outline: none;
}

.field-input:focus,
.field-textarea:focus,
select.field-input:focus {
  border-color: var(--accent-link);
}

.field-textarea {
  resize: vertical;
  min-height: 80px;
}

.field-help {
  font-size: 12px;
  color: var(--text-muted);
  margin-top: 4px;
}

/* Pills do tipo de token */

.token-type-pills {
  display: grid;
  gap: 8px;
}

.token-type-pill {
  width: 100%;
  text-align: left;
  border-radius: 10px;
  border: 1px dashed var(--border-subtle);
  background: #0b0b0b;
  padding: 8px 10px;
  font-size: 13px;
  color: var(--text-main);
  cursor: pointer;
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.token-type-pill span {
  font-size: 12px;
  color: var(--text-muted);
}

.token-type-pill--active {
  border-color: var(--accent-link);
  box-shadow: 0 0 0 1px rgba(0, 255, 255, 0.25);
}

/* Risk box */

.risk-box {
  margin-top: 16px;
  padding: 12px 14px;
  border-radius: 10px;
  border: 1px solid rgba(255, 0, 85, 0.7);
  background: rgba(255, 0, 85, 0.06);
  font-size: 13px;
  color: var(--text-muted);
  line-height: 1.6;
}

.risk-box strong {
  color: var(--accent-primary);
}

.risk-checks {
  margin-top: 8px;
  display: grid;
  gap: 6px;
}

.risk-check {
  display: flex;
  align-items: flex-start;
  gap: 6px;
  font-size: 12px;
}

.risk-check input {
  margin-top: 2px;
}

/* Summary blocks */

.summary-block {
  border-radius: 12px;
  border: 1px dashed var(--border-subtle);
  background: #101010;
  padding: 14px;
  font-size: 13px;
  color: var(--text-muted);
}

.summary-block h3 {
  font-size: 13px;
  text-transform: uppercase;
  letter-spacing: 0.12em;
  margin: 0 0 8px;
  color: var(--text-main);
}

.summary-block h4 {
  font-size: 12px;
  text-transform: uppercase;
