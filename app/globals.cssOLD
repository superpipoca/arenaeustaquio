/* === ARENA DO TRADER ‚Äì RANKING === */

.arena-screen {
  padding: 32px 0 48px;
}

.arena-shell {
  max-width: 1100px;
  margin: 0 auto;
}

/* Hero / cabe√ßalho da arena */

.arena-header {
  padding: 24px 0 24px;
  border-bottom: 1px dashed var(--border-subtle);
}

.arena-kicker {
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  color: var(--accent-link);
  margin-bottom: 8px;
}

.arena-title {
