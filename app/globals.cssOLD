/* ===== Header base ===== */
.site-header {
  width: 100%;
  position: sticky;
  top: 0;
  z-index: 50;
  background: rgba(5, 5, 5, 0.9);
  backdrop-filter: blur(8px);
  border-bottom: 1px solid var(--border-subtle);
  overflow-x: clip; /* corta qualquer sobra */
}

.header-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
  min-width: 0;  /* permite encolher */
}

.header-left,
.header-right {
  display: flex;
  align-items: center;
  gap: 8px;
  min-width: 0;
}

.header-right {
  flex-shrink: 1; /* n√£o deixa empurrar a tela */
}

.logo-box {
  display: flex;
  align-items: center;
  gap: 8px;
  white-space: nowrap;
}

.header-user-info {
  display: flex;
  gap: 6px;
  white-space: nowrap;
}

/* ===== Mobile compacto ===== */
.header-mobile {
  position: relative;
  display: flex;
  align-items: center;
  gap: 8px;
}

.header-cta--sm {
  padding: 8px 10px;
  font-size: 14px;
  line-height: 1;
  white-space: nowrap;
}

.header-icon-btn {
  width: 36px;
  height: 36px;
  border-radius: 10px;
  border: 1px solid var(--border-subtle);
  background: var(--bg-card);
  color: var(--text-main);
  display: grid;
  place-items: center;
}

.header-mobile-dropdown {
  position: absolute;
  right: 0;
  top: calc(100% + 8px);
  width: min(220px, 90vw);
  background: var(--bg-card);
  border: 1px solid var(--border-subtle);
  border-radius: 12px;
  padding: 6px;
  box-shadow: 0 10px 30px rgba(0,0,0,.55);
}

.header-mobile-user {
  padding: 8px 10px;
  border-bottom: 1px solid var(--border-subtle);
  margin-bottom: 4px;
  display: grid;
  gap: 2px;
}

.header-mobile-user .muted {
  color: var(--text-muted);
  font-size: 12px;
}

.header-mobile-item {
  width: 100%;
  text-align: left;
  padding: 10px 12px;
  border-radius: 8px;
  background: transparent;
  color: var(--text-main);
  border: none;
  cursor: pointer;
}

.header-mobile-item:hover {
  background: #1c1c1c;
}

.header-mobile-item.danger {
  color: var(--accent-primary);
}

/* Ajustes globais de seguran√ßa */
@media (max-width: 768px) {
  .header-inner {
    padding: 10px 12px;
  }

