  font-size: 32px;
  line-height: 1.15;
  text-transform: uppercase;
  margin: 0 0 10px;
}

.arena-title span {
  color: var(--accent-hype);
}

.arena-subtitle {
  font-size: 15px;
  color: var(--text-muted);
  max-width: 720px;
  line-height: 1.6;
  margin: 0 0 12px;
}

.arena-subtitle--small {
  font-size: 14px;
  max-width: 680px;
}

.arena-badges-row {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin: 10px 0 12px;
}

.arena-badge {
  flex: 1;
  min-width: 220px;
  border-radius: 999px;
  border: 1px solid var(--border-subtle);
  background: #101010;
  padding: 8px 12px;
  font-size: 13px;
  color: var(--text-muted);
  line-height: 1.4;
}

.arena-badge strong {
  color: var(--text-main);
}

/* Toolbar: ordena√ß√£o e filtro */

.arena-toolbar {
  display: flex;
  flex-wrap: wrap;
  gap: 18px;
  justify-content: space-between;
  align-items: flex-start;
  padding: 20px 0 8px;
  border-bottom: 1px dashed var(--border-subtle);
}

.arena-toolbar-left {
  display: flex;
  flex-direction: column;
  gap: 10px;
  min-width: 0;
}

.arena-sort-toggle {
  display: inline-flex;
  flex-wrap: wrap;
  gap: 6px;
  padding: 4px;
  border-radius: 999px;
  border: 1px solid rgba(255, 255, 255, 0.06);
  background: rgba(255, 255, 255, 0.02);
}

.arena-sort-option {
  border: none;
  background: transparent;
  color: var(--text-muted);
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.14em;
  padding: 7px 12px;
  border-radius: 999px;
  cursor: pointer;
  white-space: nowrap;
  transition:
    background 0.16s ease,
    color 0.16s ease,
    box-shadow 0.16s ease,
    transform 0.08s ease;
}

.arena-sort-option--active {
  background: var(--accent-link);
  color: #050505;
  box-shadow:
    0 0 0 1px rgba(0, 0, 0, 0.6),
    0 8px 22px rgba(0, 255, 255, 0.25);
}

.arena-sort-option:not(.arena-sort-option--active):hover {
  background: rgba(255, 255, 255, 0.05);
  color: var(--text-main);
}

.arena-filter-pills {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
}

.arena-filter-pill {
  border-radius: 999px;
  border: 1px dashed var(--border-subtle);
  background: #0b0b0b;
  padding: 5px 10px;
  font-size: 11px;
  text-transform: uppercase;
  letter-spacing: 0.14em;
  color: var(--text-muted);
  cursor: pointer;
  white-space: nowrap;
  transition:
    border-color 0.16s ease,
    color 0.16s ease,
    background 0.16s ease,
    transform 0.08s ease;
}

.arena-filter-pill--active {
  border-color: var(--accent-hype);
  color: var(--accent-hype);
  background: rgba(255, 221, 0, 0.08);
  box-shadow: 0 0 0 1px rgba(255, 221, 0, 0.3);
}

.arena-filter-pill:not(.arena-filter-pill--active):hover {
  border-color: var(--accent-link);
  color: var(--accent-link);
}

/* Legendinha de risco */

.arena-toolbar-right {
  max-width: 320px;
}

.arena-risk-legend {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-bottom: 6px;
}

.arena-risk-item {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  font-size: 11px;
  color: var(--text-muted);
}

.arena-risk-dot {
  width: 10px;
  height: 10px;
  border-radius: 999px;
  border: 1px solid transparent;
}

.arena-risk-dot--hype {
  background: var(--accent-hype);
  border-color: var(--accent-hype);
}

.arena-risk-dot--bolha {
  background: var(--accent-primary);
  border-color: var(--accent-primary);
}

.arena-risk-dot--frio {
  background: #555;
  border-color: #777;
}

.arena-risk-label {
  text-transform: uppercase;
  letter-spacing: 0.14em;
}

.arena-toolbar-note {
  font-size: 11px;
  color: var(--text-muted);
  line-height: 1.5;
}

/* Lista / ranking */

.arena-list-section {
  padding: 24px 0 10px;
}

.arena-list-header {
  margin-bottom: 12px;
}

.arena-list-title {
  font-family: "Oswald", sans-serif;
  font-size: 22px;
  text-transform: uppercase;
  margin: 0 0 4px;
}

.arena-list-caption {
  font-size: 13px;
  color: var(--text-muted);
  max-width: 640px;
  line-height: 1.5;
}

.arena-empty {
  border-radius: 14px;
  border: 1px dashed var(--border-subtle);
  background: #101010;
  padding: 16px;
  font-size: 14px;
  color: var(--text-muted);
  line-height: 1.5;
}

/* Cards reaproveitando estilos de creator */

.arena-token-list {
  margin-top: 10px;
}

.arena-token-card {
  transition:
    border-color 0.16s ease,
    transform 0.12s ease,
    box-shadow 0.16s ease;
}

.arena-token-card:hover {
  border-color: var(--accent-link);
  transform: translateY(-2px);
  box-shadow: 0 0 0 1px rgba(0, 255, 255, 0.18),
    0 14px 32px rgba(0, 0, 0, 0.8);
}

.arena-token-story {
  font-size: 13px;
  color: var(--text-main);
  margin: 6px 0 10px;
}

.arena-metric-unit {
  font-size: 11px;
  color: var(--text-muted);
}

.arena-value-pos {
  color: var(--accent-hype);
}

.arena-value-neg {
  color: var(--accent-primary);
}

.arena-risk-note {
  font-size: 12px;
  color: var(--text-muted);
  margin: 0 0 8px;
}

.arena-actions-row {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.arena-primary-action {
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.14em;
}

.arena-secondary-action {
  font-size: 11px;
  text-transform: uppercase;
  letter-spacing: 0.16em;
}

/* Aviso final */

.arena-warning-strip {
  margin-top: 18px;
  padding: 12px 14px;
  border-radius: 12px;
  border: 1px solid var(--accent-primary);
  background: rgba(255, 0, 85, 0.06);
  font-size: 12px;
  color: var(--text-muted);
  line-height: 1.6;
}

.arena-warning-strip strong {
  color: var(--accent-primary);
}

/* Responsivo */

@media (max-width: 900px) {
  .arena-screen {
    padding-top: 20px;
  }

  .arena-header {
    padding-top: 12px;
  }

  .arena-title {
    font-size: 26px;
  }

  .arena-subtitle,
  .arena-subtitle--small {
    font-size: 14px;
  }

  .arena-toolbar {
    flex-direction: column;
  }

  .arena-toolbar-right {
    max-width: none;
  }

  .arena-sort-toggle {
    width: 100%;
    justify-content: flex-start;
    overflow-x: auto;
  }

  .arena-sort-option {
    font-size: 11px;
  }

  .arena-actions-row {
    flex-direction: column;
  }

  .arena-primary-action,
  .arena-secondary-action {
    width: 100%;
    text-align: center;
  }
}
/* === MARKET TICKER ‚Äì BARRA OBSESSIVA DE COTA√á√ïES (UPGRADE) === */

.market-ticker {
  margin: 18px 0 28px;
}

.market-ticker-strip {
  position: relative;
  overflow: hidden;
  border-radius: 999px;
  border: 1px solid var(--border-subtle);
  background: radial-gradient(circle at top, #181818 0, #050505 60%);
}

.market-ticker-track {
  display: inline-flex;
  align-items: stretch;
  gap: 24px;
  padding: 8px 26px;
  white-space: nowrap;
  animation: market-ticker-scroll 40s linear infinite;
}

/* Cada ‚Äúbloco‚Äù de token no ticker */
.market-ticker-item {
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  gap: 2px;
  min-width: 180px;
  padding-right: 16px;
  margin-right: 8px;
  border-right: 1px solid rgba(255, 255, 255, 0.08);
}

/* Linha de cima: Ticker + pre√ßo + varia√ß√£o */
.market-ticker-main {
  display: flex;
  align-items: baseline;
  gap: 10px;
}

.market-ticker-ticker {
  font-family: "Oswald", sans-serif;
  text-transform: uppercase;
  letter-spacing: 0.16em;
  font-size: 11px;
  color: var(--accent-hype);
}

.market-ticker-price-block {
  display: flex;
  align-items: baseline;
  gap: 6px;
}

.market-ticker-price {
  font-size: 13px;
  font-weight: 600;
  color: var(--text-main);
}

.market-ticker-change {
  font-size: 11px;
  font-weight: 500;
}

.market-ticker-change--up {
  color: var(--accent-hype);
}

.market-ticker-change--down {
  color: var(--accent-primary);
}

/* Linha de baixo: nome + zona de mercado */
.market-ticker-meta {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-top: 2px;
}

.market-ticker-name {
  font-size: 11px;
  max-width: 140px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: var(--text-muted);
}

/* P√≠lula de zona de mercado */
.market-ticker-zone {
  font-size: 10px;
  text-transform: uppercase;
  letter-spacing: 0.14em;
  padding: 2px 8px;
  border-radius: 999px;
  border: 1px solid var(--border-subtle);
}

.market-ticker-zone--hype {
  border-color: var(--accent-hype);
  color: var(--accent-hype);
}

.market-ticker-zone--bolha {
  border-color: var(--accent-primary);
  color: var(--accent-primary);
}

.market-ticker-zone--frio {
  border-color: var(--text-muted);
  color: var(--text-muted);
}

.market-ticker-note {
  margin-top: 6px;
  font-size: 11px;
  color: var(--text-muted);
  text-align: right;
}

/* Anima√ß√£o de rolagem cont√≠nua */
@keyframes market-ticker-scroll {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}

/* Responsivo */
@media (max-width: 900px) {
  .market-ticker-track {
    gap: 18px;
    padding: 8px 18px;
    animation-duration: 32s;
  }

  .market-ticker-item {
    min-width: 170px;
    padding-right: 12px;
  }

  .market-ticker-note {
    font-size: 10px;
  }
}
/* TOP STRIP DEMO */
.trade-panel-strip {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 8px;
  padding: 6px 10px;
  border-radius: 999px;
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.08);
  font-size: 0.75rem;
}

.trade-strip-dot {
  width: 7px;
  height: 7px;
  border-radius: 999px;
  background: #ff0055;
  box-shadow: 0 0 10px rgba(255, 0, 85, 0.9);
  animation: trade-strip-pulse 1.4s infinite;
}

@keyframes trade-strip-pulse {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.35);
    opacity: 0.4;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.trade-strip-label {
  text-transform: uppercase;
  letter-spacing: 0.15em;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
}

.trade-strip-text {
  color: rgba(255, 255, 255, 0.75);
}

/* GRID TOPO (RESUMO + TERM√îMETRO) */
.trade-panel-top-grid {
  display: grid;
  grid-template-columns: minmax(0, 1.2fr) minmax(0, 1.5fr);
  gap: 14px;
}

@media (max-width: 768px) {
  .trade-panel-top-grid {
    grid-template-columns: minmax(0, 1fr);
  }
}

/* j√° existiam: reaproveita cards */
.trade-panel-summary {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 10px;
}

/* TERM√îMETRO DE RISCO */
.trade-risk-meter {
  padding: 10px 12px;
  border-radius: 14px;
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.12);
}

.trade-risk-meter-label {
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.09em;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 6px;
}

.trade-risk-meter-track {
  display: flex;
  justify-content: space-between;
  gap: 6px;
}

.trade-risk-meter-step {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
  opacity: 0.45;
  transition: opacity 0.2s ease, transform 0.2s ease;
}

.trade-risk-meter-step--active {
  opacity: 1;
  transform: translateY(-1px);
}

.trade-risk-dot {
  width: 9px;
  height: 9px;
  border-radius: 999px;
  background: rgba(255, 255, 255, 0.16);
}

.trade-risk-meter-step--active .trade-risk-dot {
  background: linear-gradient(135deg, #ff0055, #ffdd00);
  box-shadow: 0 0 14px rgba(255, 0, 85, 0.9);
}

.trade-risk-text {
  font-size: 0.7rem;
  color: rgba(255, 255, 255, 0.75);
}

/* GRID PRINCIPAL: FORM + INSIGHTS */
.trade-panel-main-grid {
  margin-top: 12px;
  display: grid;
  grid-template-columns: minmax(0, 1.1fr) minmax(0, 1fr);
  gap: 16px;
}

@media (max-width: 768px) {
  .trade-panel-main-grid {
    grid-template-columns: minmax(0, 1fr);
  }
}

/* INSIGHTS */
.trade-insights {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.trade-insights-card {
  padding: 10px 12px;
  border-radius: 12px;
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.08);
  font-size: 0.8rem;
}

.trade-insights-card--danger {
  border-color: rgba(255, 0, 85, 0.7);
  background: radial-gradient(circle at top left, rgba(255, 0, 85, 0.25), transparent 60%);
}

.trade-insights-title {
  font-size: 0.78rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  margin-bottom: 4px;
}

.trade-insights-text {
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}

.trade-risk-list {
  list-style: disc;
  padding-left: 16px;
  margin: 4px 0 0;
  color: rgba(255, 255, 255, 0.8);
}

